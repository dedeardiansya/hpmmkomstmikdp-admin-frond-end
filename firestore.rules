service cloud.firestore {
  match /databases/{database}/documents {
  	function isAdmin() {
    	return exists(/databases/$(database)/documents/admin/$(request.auth.token.email));
    }
    match /admin/{email} {
    	allow read: if isAdmin();
    }
    match /config/{key} {
      allow read: if key == 'blog'
                  || key == 'event';
    }
  }
}